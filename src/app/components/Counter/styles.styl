.counter
    border: 2px solid #fff
    border-radius: 50% 50%
    width: 90vh
    height: 90vh
    margin: auto
    text-align: center
    overflow: hidden
    vertical-align: middle


    position: absolute;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;

.fill
    position: absolute;
    z-index: -1
    bottom: 0
    width: 100%
    height: 29px
    background:rgba(255, 255, 255, 0.40)

.inputs
    padding: 15% 0

.controls
    cursor: pointer
